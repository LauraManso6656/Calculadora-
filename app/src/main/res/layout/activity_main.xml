<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:background="#EEEEEE"
        android:gravity="end"
        android:padding="16dp"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:rowCount="5"
        android:columnCount="4"
        android:orientation="horizontal">

        <!-- Fila 1 -->
        <Button android:id="@+id/buttonDEL" android:text="DEL" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_row="0" android:layout_column="0"/>
        <Button android:id="@+id/buttonPORCENTAJE" android:text="%" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_row="0" android:layout_column="1"/>
        <Button android:id="@+id/buttonDIV" android:text="÷" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_row="0" android:layout_column="2"/>
        <Button android:id="@+id/buttonMULT" android:text="x" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_row="0" android:layout_column="3"/>

        <!-- Fila 2 -->
        <Button android:id="@+id/button7" android:text="7" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_row="1" android:layout_column="0"/>
        <Button android:id="@+id/button8" android:text="8" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_row="1" android:layout_column="1"/>
        <Button android:id="@+id/button9" android:text="9" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_row="1" android:layout_column="2"/>
        <Button android:id="@+id/buttonMINUS" android:text="−" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_row="1" android:layout_column="3"/>

        <!-- Fila 3 -->
        <Button android:id="@+id/button4" android:text="4" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_row="2" android:layout_column="0"/>
        <Button android:id="@+id/button5" android:text="5" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_row="2" android:layout_column="1"/>
        <Button android:id="@+id/button6" android:text="6" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_row="2" android:layout_column="2"/>
        <Button android:id="@+id/buttonADD" android:text="+" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_row="2" android:layout_column="3"/>

        <!-- Fila 4 -->
        <Button android:id="@+id/button1" android:text="1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_row="3" android:layout_column="0"/>
        <Button android:id="@+id/button2" android:text="2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_row="3" android:layout_column="1"/>
        <Button android:id="@+id/button3" android:text="3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_row="3" android:layout_column="2"/>
        <Button android:id="@+id/buttonEQUAL" android:text="=" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_row="3" android:layout_column="3"/>

        <!-- Fila 5 -->
        <Button android:id="@+id/button0" android:text="0" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_row="4" android:layout_columnSpan="2"/>
        <Button android:id="@+id/buttonCOMA" android:text="," android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_row="4" android:layout_column="2"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
